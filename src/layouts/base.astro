<html>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <meta name='description' content='Resources site for Jody Geraldo' />
    <title>Resources site</title>
  </head>

  <body class='bg-gray-1'>
    <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-12 pb-16'>
      <h1
        class='text-4xl font-extrabold text-gray-12 sm:text-5xl sm:tracking-tight lg:text-6xl text-center'
      >
        Resources Sites
      </h1>
      <main class='max-w-3xl mx-auto prose lg:prose-xl mt-8'>
        <slot></slot>
      </main>

      <footer
        class='max-w-3xl mx-auto flex items-center justify-between gap-40 mt-8'
      >
        <p class='text-gray-11'>
          All rights reserved &copy; Jody Geraldo {new Date().getFullYear()}.
        </p>

        <a href='https://icons8.com/' class='text-gray-11'
          >favicon is from <span class='text-blue-500 hover:text-blue-400'
            >icons8
          </span>
        </a>
      </footer>
    </div>
    <style>
      :root {
        --slate1: hsl(206, 30%, 98.8%);
        --slate2: hsl(210, 16.7%, 97.6%);
        --slate3: hsl(209, 13.3%, 95.3%);
        --slate4: hsl(209, 12.2%, 93.2%);
        --slate5: hsl(208, 11.7%, 91.1%);
        --slate6: hsl(208, 11.3%, 88.9%);
        --slate7: hsl(207, 11.1%, 85.9%);
        --slate8: hsl(205, 10.7%, 78%);
        --slate9: hsl(206, 6%, 56.1%);
        --slate10: hsl(206, 5.8%, 52.3%);
        --slate11: hsl(206, 6%, 43.5%);
        --slate12: hsl(206, 24%, 9%);
      }

      @media (prefers-color-scheme: dark) {
        :root {
          --slate1: hsl(200, 7%, 8.8%);
          --slate2: hsl(195, 7.1%, 11%);
          --slate3: hsl(197, 6.8%, 13.6%);
          --slate4: hsl(198, 6.6%, 15.8%);
          --slate5: hsl(199, 6.4%, 17.9%);
          --slate6: hsl(201, 6.2%, 20.5%);
          --slate7: hsl(203, 6%, 24.3%);
          --slate8: hsl(207, 5.6%, 31.6%);
          --slate9: hsl(206, 6%, 43.9%);
          --slate10: hsl(206, 5.2%, 49.5%);
          --slate11: hsl(206, 6%, 63%);
          --slate12: hsl(210, 6%, 93%);
        }
      }

      .prose {
        --tw-prose-body: var(--slate11);
        --tw-prose-headings: var(--slate12);
        --tw-prose-lead: var(--slate3);
        --tw-prose-links: var(--slate12);
        --tw-prose-bold: var(--slate12);
        --tw-prose-counters: var(--slate4);
        --tw-prose-bullets: var(--slate8);
        --tw-prose-hr: var(--slate7);
        --tw-prose-quotes: var(--slate12);
        --tw-prose-quote-borders: var(--slate7);
        --tw-prose-captions: var(--slate4);
        --tw-prose-code: var(--slate12);
        --tw-prose-pre-code: var(--slate7);
        --tw-prose-pre-bg: var(--slate12);
        --tw-prose-th-borders: var(--slate8);
        --tw-prose-td-borders: var(--slate7);
      }
    </style>
  </body>
</html>
